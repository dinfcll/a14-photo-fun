@{
    ViewBag.Title = "Page d'accueil";
    var lstimage = ViewData["lstimage"] as List<string>;
}
@section featured {
    
        @using(Html.BeginForm()){
        if (lstimage != null && lstimage.Count > 0)
        {
            int indice = 0;
            bool unefois = true;
            bool jamaispasser= true;
            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                @foreach (var PhotoAccueil in lstimage)
                {
                    if (unefois)
                    {
                        <li data-target="#carousel-example-generic" data-slide-to="@indice" class="active"></li>
                        unefois = false;
                    }
                    else
                    {
                        <li data-target="#carousel-example-generic" data-slide-to="@indice" class></li>
                    }
                }
                </ol>  
                <div class="carousel-inner">
                @foreach (var PhotoAccueil in lstimage)
                {
                    if (jamaispasser)
                    {
                        <div class="item active">
                             <img src="@PhotoAccueil" alt="Image inaccessible"/>
                        </div>
                        jamaispasser = false;
                    }
                    else
                    {
                       <div class="item">
                             <img src="@PhotoAccueil" alt="Image inaccessible"/>
                        </div> 
                    } 
                }
                </div> 
                <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                </a>
                <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                </a>
            </div>
        }
        else
        {
            <div class="page-header">
            <br/>
                <span>Il n'y a pas de photos. @Html.ActionLink("Importez", "Importer", "Home") en une pour voir des photos.</span>
            </div>
        }
    }      
}
