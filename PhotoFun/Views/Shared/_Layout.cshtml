<!DOCTYPE html>
<html lang="fr">
    <head>
<meta http-equiv="Content-Type" content="text/html charset=utf-8"/>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - PhotoFun</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/bootstrap.css")
        @Styles.Render("~/Content/MonCSS.css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header"> 
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    </button> 
                    <a class="navbar-brand" href="/Home/Index">PhotoFun</a>
                </div>
                <div class="navbar-collapse collapse" style="height: 1px">
                    <div class="col-sm-3 col-md-3">
                        <!--<form class="navbar-form" role="search">-->
                        @Html.BeginForm("ProfilUtil", "Account", FormMethod.Post)
                        {
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Chercher quelqu'un" name="RechercheUtil">
                                <div class="input-group-btn">
                                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                                </div>
                            </div>
                        }
                        @*</form>*@
                    </div>
                    <ul class="nav navbar-nav navbar-right" style="margin-left:2%">
                            @Html.Partial("_LoginPartial")
                        <li>@Html.ActionLink("Accueil", "Index", "Home")</li>
                        <li>@Html.ActionLink("Importer", "Importer", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    </ul>
                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" })){
                    @Html.AntiForgeryToken()}
                    </div>
             </div>
        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-3 col-sm-2 col-md-2 col-lg-1">
                    <ul class="menucotegauche sidebar">
                        <li>@Html.ActionLink("Sport", "RetourneLaVueSelonCategorie", "Home", new { categorie="Sport" },null)</li>
                        <li>@Html.ActionLink("Nature", "RetourneLaVueSelonCategorie", "Home",new { categorie="Nature" },null)</li>
                        <li>@Html.ActionLink("Famille", "RetourneLaVueSelonCategorie", "Home",new { categorie="Famille" },null)</li>
                        <li>@Html.ActionLink("Paysage", "RetourneLaVueSelonCategorie", "Home",new { categorie="Paysage" },null)</li>
                        <li>@Html.ActionLink("Cuisine", "RetourneLaVueSelonCategorie", "Home",new { categorie="Cuisine"},null)</li>
                        <li>@Html.ActionLink("Animaux", "RetourneLaVueSelonCategorie", "Home",new { categorie="Animaux"},null)</li>
                        <li>@Html.ActionLink("Autres", "RetourneLaVueSelonCategorie", "Home",new { categorie="Autres" },null)</li>
                    </ul>
                </div>
                <div class="col-xs-8 col-sm-8 col-md-9 col-lg-9 main">
                    @RenderSection("featured", required: false)
                    @RenderBody()
                </div>   
        </div>
        <div class="footer">
             <p>&copy; @DateTime.Now.Year - PhotoFun</p>
        </div>
    </div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/Scripts/bootstrap.js")
        @RenderSection("scripts", required: false)
    </body>
</html>     
