@{
    ViewBag.Title = "Mes abonnements";
    var mesAbonnements=ViewData["MesAbonnements"] as List<string>;
}
<div class="page-header">
    <h2>@ViewBag.Title</h2>
</div>
@{   
    if (mesAbonnements != null && mesAbonnements.Count > 0)
    {
        foreach (var abonnes in mesAbonnements)
        {
            <div class="divdesprofils">
                <div class="col-xs-8 col-sm-6 col-md-2">
		            @{
                        var requeteUtilBd = new PhotoFun.Models.RequeteUtilBd();
		                var image = requeteUtilBd.ExtrairePhotoProfil(abonnes);
		                if(image!="")
                        {
                            <img src="@image" alt="Image inaccessible" class="img-thumbnail" width="100%"/>
                        }
                        else
                        {
                            <img src="/Images/defautPhoto.jpg" alt="Image inaccessible" class="img-thumbnail" width="100%"/>
                        }
                    }
                </div>
                <div class="col-xs-4 col-sm-4 col-md-6">
                    <h3><a href="/Account/ProfilUtil?nomUtil=@abonnes" id="nomUtil">@abonnes</a></h3>
                </div>
            </div>
        }
    }
    else
    {
        <h3>Vous n'avez présentement aucun abonnement.</h3>
    }
}
