@{
    ViewBag.Title = "_ImageProfil";
    var profil = ViewData["profil"] as string;
    
    var requeteUtilBD = new PhotoFun.Models.RequeteUtilBD();
    var image = "";
    image = requeteUtilBD.ExtrairePhotoProfil(profil);
    if(image!="")
    {
        <img src="@image" alt="Image inaccessible" class="img-thumbnail" width="100%"/>
    }
    else
    {
        <img src="/Images/defautPhoto.jpg" alt="Image inaccessible" class="img-thumbnail" width="100%"/>
    }
}
