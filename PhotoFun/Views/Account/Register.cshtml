@model PhotoFun.Models.RegisterModel
@{
    ViewBag.Title = "S'inscrire";
}

<div class="page-header">
    <h1>@ViewBag.Title.</h1>
    <h2>Créez un nouveau compte.</h2>
</div>

@using (Html.BeginForm()) {
    <div class="couleurrouge">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()
    </div>

    <fieldset>
        <legend>Formulaire d’inscription</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
            </li>
            <li>
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
            </li>
            <li>
                @Html.LabelFor(m => m.Courriel)
                @Html.TextBoxFor(m => m.Courriel)
            </li>
            <li>
                @Html.LabelFor(m => m.PrenomUtil)
                @Html.TextBoxFor(m => m.PrenomUtil)
            </li>
            <li>
                @Html.LabelFor(m => m.NomUtil)
                @Html.TextBoxFor(m => m.NomUtil)
            </li>
           
        </ol>
        <input class="btn btn-lg btn-info" type="submit" value="S'inscrire" />
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
