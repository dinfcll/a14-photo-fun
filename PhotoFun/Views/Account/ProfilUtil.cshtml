@{
    ViewBag.Title = "Profil recherché";
    var NomProfil = ViewData["Rechercher"] as PhotoFun.Models.ProfilModel;
}
<div class="page-header">
    @Html.Label(NomProfil.IdUtilRechercher)
</div>
    @Html.Label(NomProfil.NbAbonnement.ToString())
    @{
        if (NomProfil.Abonner)
        {
            @Html.ActionLink("Ne plus suivre","Suivre",new{ nom=NomProfil.IdUtilRechercher, abonner=NomProfil.Abonner}, null)
        }
        else
        {
            @Html.ActionLink("Suivre", "Suivre", "Account", new { nom = NomProfil.IdUtilRechercher, abonner=NomProfil.Abonner }, null)
        }
        <br />
    @Html.ActionLink("Photos", "PhotoUtil", "Account", new { nom = NomProfil.IdUtilRechercher },null)
    }
    

